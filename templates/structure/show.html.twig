{% extends 'base.html.twig' %}

{% block title %}Structure{% endblock %}

{% block body %}
    <h1>Structure</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ structure.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ structure.nom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ structure.adresse }}</td>
            </tr>
            <tr>
                <th>Code_postal</th>
                <td>{{ structure.codePostal }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ structure.ville }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ structure.statut ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Nom_gerant</th>
                <td>{{ structure.nomGerant }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_structure_index') }}">back to list</a>

    <a href="{{ path('app_structure_edit', {'id': structure.id}) }}">edit</a>

    {{ include('structure/_delete_form.html.twig') }}
{% endblock %}
